<div class="card">
  <h3 class="card-header">Create New Post</h3>
  <form class="card-body new-post-form" id="new-post-form">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input type="text" id="post-title" name="post-title" class="form-input"/>
    </div>
    <div>
      <label for="post-content" class="form-label">Post</label>
      <textarea name="post-content" class="form-textarea"></textarea>
    </div>
    <button id="post-button" type="submit" class="btn">Create</button>
  </form>
</section>

<script src="/javascript/add-post.js"></script>